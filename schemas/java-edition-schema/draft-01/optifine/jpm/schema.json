{
    "$id": "https://legopitstop.github.io/JSON-Schemas/schemas/java-edition-schema/draft-01/optifine/jpm/schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Json Part Model",
    "description": "Reference configuration for OptiFine's feature Custom Entity Models https://github.com/sp614x/optifine/blob/master/OptiFineDoc/doc/cem_part.txt",
    "type": "object",
    "default": {},
    "properties": {
        "texture": {
            "description": "Texture used by the part model",
            "type": "string"
        },
        "textureSize": {
            "description": "Texture size in pixels",
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "number"
            }
        },
        "invertAxis": {
            "description": "Axis to invert, for example \"xyz\" inverts all axes",
            "enum": [
                "xyz"
            ]
        },
        "translate": {
            "description": "Translate (pixels)",
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "number"
            }
        },
        "rotate": {
            "description": "Rotate (degrees)",
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "number"
            }
        },
        "mirrorTexture": {
            "description": "Texture axis to mirror, for example \"uv\" mirrors both U and V axis",
            "type": "string"
        },
        "boxes": {
            "description": "List of part model boxes",
            "type": "array",
            "items": {
                "type": "object",
                "required": ["textureOffset","coordinates"],
                "properties": {
                    "textureOffset": {
                        "description": "Texture offset for box format, see \"model_box.png\"",
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": {
                            "type": "number"
                        }
                    },
                    "uvDown": {
                        "description": "UV for face down",
                        "type": "array",
                        "minItems": 4,
                        "maxItems": 4,
                        "items": {
                            "type": "number"
                        }
                    },
                    "uvUp": {
                        "description": "UV for face up",
                        "type": "array",
                        "minItems": 4,
                        "maxItems": 4,
                        "items": {
                            "type": "number"
                        }
                    },
                    "uvNorth": {
                        "description": "UV for face north, alias \"uvFront\"",
                        "type": "array",
                        "minItems": 4,
                        "maxItems": 4,
                        "items": {
                            "type": "number"
                        }
                    },
                    "uvSouth": {
                        "description": "UV for face south, alias \"uvBack\"",
                        "type": "array",
                        "minItems": 4,
                        "maxItems": 4,
                        "items": {
                            "type": "number"
                        }
                    },
                    "uvWest": {
                        "description": "UV for face west, alias \"uvLeft\"",
                        "type": "array",
                        "minItems": 4,
                        "maxItems": 4,
                        "items": {
                            "type": "number"
                        }
                    },
                    "uvEast": {
                        "description": "UV for face east, alias \"uvRight\"",
                        "type": "array",
                        "minItems": 4,
                        "maxItems": 4,
                        "items": {
                            "type": "number"
                        }
                    },
                    "coordinates": {
                        "description": "Box position and dimensions",
                        "type": "array",
                        "minItems": 6,
                        "maxItems": 6,
                        "items": {
                            "type": "number"
                        }
                    },
                    "sizeAdd": {
                        "description": "Size increment (added to all dimensions) can be used for asymmetric scaling",
                        "type": "number"
                    }
                }
            }
        },
        "sprites": {
            "description": "List of 3D sprite models (depth 1)",
            "type": "array",
            "items": {
                "properties": {
                    "textureOffset": {
                        "description": "Texture offset (pixels)",
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": {
                            "type": "number"
                        }
                    },
                    "coordinates": {
                        "description": "Box position and dimensions",
                        "type": "array",
                        "minItems": 6,
                        "maxItems": 6,
                        "items": {
                            "type": "number"
                        }
                    },
                    "sizeAdd": {
                        "description": "Size increment (added to all dimensions) can be used for asymmetric scaling",
                        "type": "number"
                    }
                }
            }
        },
        "submodel": {
            "description": "Sub-model (attached to the parent, moving and rotating with it)",
            "type": "object",
            "default": {},
            "$ref": "#/properties"
        },
        "submodels": {
            "description": "List of sub-models (attached to the parent, moving and rotating with it)",
            "type": "array",
            "default": [],
            "items": {
                "type": "object",
                "default": {},
                "$ref": "#"
            }
        }
    }
}