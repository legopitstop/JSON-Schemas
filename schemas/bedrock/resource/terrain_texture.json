{
    "id": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/bedrock/resource/terrain_texture.json", 
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "properties": {
        "num_mip_levels": {"type": "integer", "default": 0}, 
        "padding": {"type": "integer", "default": 0}, 
        "resource_pack_name": {"type": "string", "default": "vanilla"}, 
        "texture_name": {"type": "string", "default": "atlas.terrain"}, 
        "texture_data": {
            "type": "object", 
            "default": {}, 
            "additionalProperties": {
                "type": "object", 
                "default": {}, 
                "properties": {
                    "textures": {
                        "type": ["object", "string"], 
                        "default": {}, 
                        "properties": {
                            "path": {
                                "type":"string"
                            },
                            "variations": {
                                "type":"array",
                                "default":[],
                                "items":{
                                    "type":"object",
                                    "default": {},
                                    "properties":{
                                        "path": {
                                            "type":"string"
                                        },
                                        "weight": {
                                            "type":"integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
