        },
        "material_instance": { "type": "string" }
      },
      "additionalProperties": false
    },
    "Locator": {
      "type": "array",
      "default": [0.0, 0.0, 0.0],
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3
    },
    "DisplayTransforms": {
