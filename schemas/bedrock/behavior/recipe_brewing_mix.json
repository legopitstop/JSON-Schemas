{
    "id": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/bedrock/behavior/recipe_brewing_mix.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "minecraft:recipe_brewing_mix": {
            "description": "Represents a Potion Brewing Mix..",
            "type": "object",
            "default": {},
            "properties": {
                "description": {
                    "type": "object",
                    "properties": {
                        "identifier": {
                            "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/bedrock/common.json#/definitions/nameSpaceID"
                        }
                    }
                },
                "tags": {
                    "type": "array",
                    "description": "Item used as input for the furnace recipe.",
                    "items": {
                        "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/bedrock/common.json#/definitions/recipeTags"
                    }
                },
                "input": {
                    "type": "string",
                    "description": "input potion used on the brewing stand."
                },
                "reagent": {
                    "type": "string",
                    "description": "item used to mix with the input potion."
                },
                "output": {
                    "type": "string",
                    "description": "output potion from mixing the input potion with the reagent on the brewing stand."
                }
            }
        }
    }
}