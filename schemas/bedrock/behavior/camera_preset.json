            "minecraft:free",
            "minecraft:first_person",
            "minecraft:third_person_front",
            "minecraft:third_person"
          ]
        },
        "player_effects": {
          "description": "Causes game rendering to use player effect state (for example night vision) when this preset is active.",
          "type": "boolean",
          "default": true
        },
        "pos_y": {
          "type": "integer",
          "default": 0
        },
        "rot_x": {
          "type": "integer",
          "default": 0
        },
