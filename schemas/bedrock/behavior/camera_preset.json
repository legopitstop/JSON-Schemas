          "type": "integer",
          "default": 0
        },
        "pos_x": {
          "type": "integer",
          "default": 0
        },
        "pos_z": {
          "type": "integer",
          "default": 0
        },
        "listener": {
          "enum": ["player"]
        }
      },
      "additionalProperties": false
    }
  }
