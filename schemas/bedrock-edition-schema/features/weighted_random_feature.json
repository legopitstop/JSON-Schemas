{
    "id": "https://legopitstop.github.io/JSON-Schemas/schemas/bedrock-edition-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "minecraft:weighted_random_feature",
    "description": "'minecraft:weighted_random_feature' randomly selects and places a feature based on a weight value. Weights are relative, with higher values making selection more likely.Succeeds if: The selected feature is placed.Fails if: The selected feature fails to be placed.",
    "properties": {
        "description": {
            "type": "object",
            "properties": {
                "identifier": {
                    "$ref": "https://legopitstop.github.io/JSON-Schemas/schemas/bedrock-edition-schema/common.json#/definitions/nameSpaceID"
                }
            }
        },
        "features": {
            "type": "array",
            "items": {
                "description": "Collection of weighted features that placement will select from.",
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": [
                    {
                        "$ref": "https://legopitstop.github.io/JSON-Schemas/schemas/bedrock-edition-schema/common.json#/definitions/nameSpaceID",
                        "description": "The feature name"
                    },
                    {
                        "type": "number",
                        "description": "The weight of the features"
                    }
                ]
            }
        }
    }
}