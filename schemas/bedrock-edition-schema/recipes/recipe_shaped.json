{
    "id": "https://legopitstop.github.io/JSON-Schemas/schemas/bedrock-edition-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "minecraft:recipe_shaped",
    "description": "Represents a shaped crafting recipe for a crafting table. The key used in the pattern may be any single character except the 'space' character, which is reserved for empty slots in a recipe..",
    "properties": {
        "description": {
            "type": "object",
            "properties": {
                "identifier": {
                    "$ref": "https://legopitstop.github.io/JSON-Schemas/schemas/bedrock-edition-schema/common.json#/definitions/nameSpaceID"
                }
            }
        },
        "tags": {
            "type": "array",
            "title": "tags",
            "description": "Item used as input for the furnace recipe.",
            "items": {
                "$ref": "https://legopitstop.github.io/JSON-Schemas/schemas/bedrock-edition-schema/common.json#/definitions/recipeTags"
            }
        },
        "priority": {
            "type": "integer",
            "title": "priority",
            "description": "Item used as output for the furnace recipe."
        },
        "pattern": {
            "type": "array",
            "title": "pattern",
            "description": "characters that represent a pattern to be defined by keys.",
            "items": {
                "type": "string"
            }
        },
        "key": {
            "type": "object",
            "title": "key",
            "description": "patten key character mapped to item names.",
            "additionalProperties": {
                "$ref": "https://legopitstop.github.io/JSON-Schemas/schemas/bedrock-edition-schema/common.json#/definitions/itemData"
            }
        },
        "result": {
            "title": "result",
            "description": "when input items match the pattern then this item(s) are the result.",
            "anyOf": [
                {
                    "type": ["string","object"],
                    "$ref": "https://legopitstop.github.io/JSON-Schemas/schemas/bedrock-edition-schema/common.json#/definitions/itemDataCount"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "https://legopitstop.github.io/JSON-Schemas/schemas/bedrock-edition-schema/common.json#/definitions/itemDataCount"
                    }
                }
            ]
        }
    }
}