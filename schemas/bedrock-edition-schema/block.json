                                "description": "Property name. must contain a namespace example; 'custom:weardo_direction'",
                                "type": "array",
                                "uniqueItems": true,
                                "maxItems": 16,
                                "minItems": 2,
                                "items": {
                                    "description": "A list of this blocks valid properties.",
                                    "anyOf": [
                                        {
                                            "type": "number"
                                        },
                                        {
                                            "type": "string",
                                            "pattern": "^[^\\s]*$"
                                        },
                                        {
                                            "type": "boolean"
                                        }
                                    ]
                                }
                            }
                        }
